{
    "Basic / Default CSS": {
        "prefix": "css",
        "description": "Insert a basic CSS template",
        "body": [
            "/* Remove all margins and paddings & Remove blue highlight on mobile */",
            "* {",
            "\t\tmargin: 0;",
            "\t\tpadding: 0;",
            "\t\tbox-sizing: border-box;",
            "\t\t-webkit-tap-highlight-color: rgba(0, 0, 0, 0);",
            "}",
            "",
            "/* Change the default font-family & color */",
            "*,",
            "*::after,",
            "*::before {",
            "\t\tbox-sizing: border-box;",
            "\t\tfont-family: \"WorkSans\", sans-serif;",
            "\t\tfont-weight: 400;",
            "\t\tfont-style: normal;",
            "}",
            "",
            "/* Set font-size to 62.5% so 0.1rem = 1 px */",
            "html {",
            "\t\tfont-size: 62.5%;",
            "\t\tscroll-behavior: smooth;",
            "}",
            "",
            "/* Stretch to fill the entire page */",
            "html,",
            "body {",
            "\t\tmin-height: 100vh;",
            "\t\toverflow-x: hidden;",
            "}",
            "",
            "/* Display flex */",
            "body {",
            "\t\tdisplay: flex;",
            "\t\tflex-direction: column;",
            "\t\tjustify-content: space-between;",
            "\t\tline-height: 1.4;",
            "}",
            "",
            "html.noscroll {",
            "\t\toverflow: hidden;",
            "}",
            "",
            "/* Remove all link styling */",
            "a {",
            "\t\ttext-decoration: none;",
            "\t\tcolor: inherit;",
            "}",
            "",
            "/* Remove style from lists */",
            "ul,",
            "ol {",
            "\t\tlist-style: none;",
            "}",
            "",
            "/* Utility Classes */",
            "",
            "/* Make anything unselectable */",
            ".unselectable {",
            "\t\t-webkit-touch-callout: none;",
            "\t\t-webkit-user-select: none;",
            "\t\t-khtml-user-select: none;",
            "\t\t-moz-user-select: none;",
            "\t\t-ms-user-select: none;",
            "\t\tuser-select: none;",
            "\t\t-webkit-user-drag: none;",
            "\t\t-webkit-touch-callout: none;",
            "}",
            "",
            ".underline {",
            "\t\ttext-decoration: underline;",
            "}"
        ]
    }
}